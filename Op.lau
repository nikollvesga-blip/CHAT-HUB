-- 3Ô∏è‚É£ Funci√≥n golpe √©pico al tocar pantalla / click
local function golpeEpico(targetPos)
    -- Animaci√≥n de golpe
    local golpeAnim = Instance.new("Animation")
    golpeAnim.AnimationId = "rbxassetid://INSERT_GOLPE_ANIMATION_ID"
    local golpeTrack = animator:LoadAnimation(golpeAnim)
    golpeTrack:Play()
    
    -- Crear "hueco" en el piso
    local impact = Instance.new("Part")
    impact.Size = Vector3.new(10,1,10)
    impact.Position = Vector3.new(targetPos.X, targetPos.Y, targetPos.Z)
    impact.Anchored = true
    impact.CanCollide = false
    impact.Material = Enum.Material.Neon
    impact.BrickColor = BrickColor.new("Bright red")
    impact.Parent = workspace
    Debris:AddItem(impact,2)
    
    -- Da√±o a enemigos dentro del √°rea
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:FindFirstChildOfClass("Humanoid") and obj ~= character then
            local hPos = obj:FindFirstChild("HumanoidRootPart")
            if hPos and (hPos.Position - impact.Position).Magnitude <= 10 then
                obj:FindFirstChildOfClass("Humanoid"):TakeDamage(50)
            end
        end
    end
end

-- Activar golpe √©pico con click / toque
mouse.Button1Down:Connect(function()
    local targetPos = mouse.Hit.Position
    golpeEpico(targetPos)
end)

